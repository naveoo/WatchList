{
  "name": "watchlist",
  "version": "1.3.1",
  "main": "src/main/main.js",
  "description": "Application Electron de gestion de watchlist de films.",
  "author": "Legris Ethan, Znatchko-Yavorsky Gabriel, Dornias Allistair",
  "license": "ISC",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder"
  },
  "devDependencies": {
    "electron": "^35.0.1",
    "electron-builder": "^26.0.12"
  },
  "dependencies": {
    "axios": "^1.8.3",
    "dotenv": "^16.4.7",
    "sqlite3": "^5.1.7"
  },
  "build": {
    "appId": "com.example.watchlist",
    "productName": "Watchlist",
    "asar": true,
    "files": [
      "src/**/*",
      "node_modules/**/*",
      "package.json"
    ],
    "extraResources": [
      {
        "from": "data/",
        "to": "data/",
        "filter": ["**/*.db"]
      }
    ],
    "win": {
      "target": "nsis",
      "icon": "icon.ico"
    }
  }
}